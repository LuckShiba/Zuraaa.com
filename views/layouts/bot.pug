.bot-card
  .avatar-box(title=bot.name)
    //- a(href="#" onclick="showModal('" + bot.id + "')")
    //-   span Ver
    
    .avatar(style=`background-image: url('${genAvatarUrl(bot._id, bot.avatar)}')`)
  .details
    p.heading(title="Tags") #{bot.details.tags[Math.floor(Math.random() * bot.details.tags.length)]} |  #{bot.details.guilds || "???"} servidores | #{bot.votes} votos
    p.title.is-size-4(title=bot.username)
      img(title="Online" src="/img/icons/" + bot.status + ".png" oncontextmenu="return false;")
      | #{bot.username}
    p.subtitle.is-size-6(title="Descrição")=bot.details.shortDescription

    - let baseUrl = '/bots/' + (bot.details.customURL || bot._id)

    .links
      a.page(title="Página" href=baseUrl)
        span
        p Página
      
      a.invite(title="Adicionar" href=baseUrl + "/add")
        span
        p Adicionar
      
      a.invite(title="Votar" href=baseUrl + "/votar")
        span
        p Votar