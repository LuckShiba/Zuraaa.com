extends ../layouts/layout

block head
    link(rel="stylesheet", href="/css/user.css")

block content
    #profile.has-text-centered
        img#avatar.avatar(src=user.avatar alt="Avatar" oncontextmenu="return false;" draggable="false")
        h1.username.is-size-1.has-text-white
            | #{user.name}
            span.is-size-4.has-text-grey-light ##{user.tag}
        if !user.banned
            p.about.is-size-5.has-text-grey-light #{user.bio}
        br
        .buttons.is-centered
            if session !== undefined
                if session._id === user.id
                    a.button(href=user.url + "edit") Editar
                if session.details.role > 2
                    a.button(href=user.url + "action") Ações
    .container.main-container
        .bots
            - console.log(bots)
            h2.is-size-3 BOTS
                if bots.length != 0
                    for bot in bots
                        include layouts/bot
                else
                    p.is-size-5 Esse usuário não possui nenhum bot listado publicamente no sistema.